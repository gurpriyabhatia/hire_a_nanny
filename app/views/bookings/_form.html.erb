

  <div class= "row align-items-center justify-content-center">

    <div class= "col-sm-4">
      <%= image_tag "hire-a-nanny-logo.png", :class => "nanny-booking-logo" %>
    </div>

    <div class= "col-sm-4">
      <%= simple_form_for booking do |f| %>
        <%= f.input :nanny_id, as: :hidden, input_html: { value: @nanny.id } %>
        <%= f.input :start_date, as: :string %>
        <%= f.input :end_date, as: :string %>
        <%= f.input :address %>
        <%= f.input :number_of_children %>
      <%= f.submit "Book now!", class: "btn-flat" %>
      <% end %>
    </div>

    <div class= "col-sm">
      <div class="shadow-sm p-3 mb-5 mt-5 bg-white nanny-profile-card">
        <div class="row">
          <div class="nanny-avatar-container">
            <%= image_tag @nanny.image, alt: "alttext", class: "nanny_avatar" %>
          </div>
        </div>
        <class class="card p-3 mt-3 mb-3 border border-white">
          <p class="text-center"><strong>Years of experience:</strong> <%= @nanny.years_of_experience %></p>
          <p class="text-center"><strong>Price per hour: </strong>Â£<%= @nanny.price_per_hour %></p>
          <div class="col text-center">
            <p><strong><%= link_to "Book Now", new_nanny_booking_path(@nanny), :class => "btn btn-flat" %></strong></p>
          </div>

        </class>
      </div>

    </div>
  </div>
