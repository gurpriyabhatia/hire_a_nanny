<div class = "container">
  <div class="row">
    <div class="col-sm-4">
      <div class="shadow-sm p-3 mb-5 bg-white rounded nanny-profile-card">
        <div class="row">
          <div class="nanny-avatar-container">
          <%= image_tag @booking.nanny.image, alt: "alttext", class: "nanny_avatar" %>
          </div>
        </div>
        <class class="card p-3 mt-3 mb-3 border border-white">
          <p class="text-center"><strong><%= @booking.nanny.nanny_name %></strong></p>
          <p class="text-center"><strong>Years of experience:</strong> <%= @booking.nanny.years_of_experience %></p>
          <p class="text-center"><strong>Price per hour: </strong>Â£<%= @booking.nanny.price_per_hour %></p>
          <div class="col text-center">
            <p><strong><%= link_to "View Profile", nanny_path(@booking.nanny), :class => "btn btn-flat" %></strong></p>
          </div>

        </class>
      </div>
    </div>

<div class="col-sm-8 mt-3">
  <h1>Your Booking Details</h1>
    <div class="card-product">
      <div class="card-product-infos">
          <p><strong>Start date:</strong> <%= @booking.start_date %></p>
          <p><strong>End date:</strong> <%= @booking.end_date %></p>
          <p><strong>Address:</strong> <%= @booking.address %></p>
          <p><strong>Duration:</strong> <%= rand(5..10) %> Hrs</p>
          <p><strong>Number of children:</strong> <%= @booking.number_of_children %></p>
          <p><strong>Total Price:</strong> GBP 75</p>
      </div>
    </div>


  <!-- <div class="container"> -->
    <br>

    <!-- Display booking review, if it exists. If not, display link to add a review-->
    <div class="card-product">
      <div class="card-product-infos">
        <h4>Your review for this booking</h4>
        <% if @booking.review %>
          <%= '*' * @booking.review.stars %>
          <p><%= @booking.review.content %></p>
        <% else %>
          <p class="missing-review">You haven't reviewed this booking yet</p>
          <p><%= link_to 'Add a review', new_booking_review_path(@booking), :class => "link" %></p>
        <% end %>
      </div>
    </div>
    <br>

    <div class="booking-actions">
      <%= link_to 'Edit this booking', edit_booking_path(@booking) %>

      <%= link_to 'Delete this booking', booking_path(@booking),
                method: :delete,
                data: {confirm: "Are you sure?"} %>

      <%= link_to 'Back to your bookings', bookings_path %>
    </div>

  <!-- </div> -->


</div>
